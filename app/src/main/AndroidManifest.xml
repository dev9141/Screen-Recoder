<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.manddprojectconsultant.screencam">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.INTERNAL_SYSTEM_WINDOW"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature
        android:glEsVersion="0x00010001"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:defaultToDeviceProtectedStorage="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.manddprojectconsultant.screencam.Checkingforbutton"></activity>
        <activity android:name="com.manddprojectconsultant.screencam.GridLayoutActivity" />
        <activity android:name="com.manddprojectconsultant.screencam.Welcome_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.manddprojectconsultant.screencam.NotiRecordingStart" />
        <activity android:name="com.manddprojectconsultant.screencam.NotiRecordingStop" />
        <activity
            android:name="com.manddprojectconsultant.screencam.BackgroundActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <receiver
            android:name="com.manddprojectconsultant.screencam.PlayReciever"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.manddprojectconsultant.screencam.VideoPlayerActivity" />
        <activity android:name="com.manddprojectconsultant.screencam.SettingActivity" />

        <activity
            android:name="com.manddprojectconsultant.screencam.SplashScreen"
            android:theme="@style/SplashTheme" />
        <activity android:name="com.manddprojectconsultant.screencam.MainActivity" />
        <activity
            android:name="com.manddprojectconsultant.screencam.BlankActivity"
            android:launchMode="singleTop" />

        <service
            android:name="com.manddprojectconsultant.screencam.FloatingViewService"
            android:enabled="true"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <provider
            android:name="com.manddprojectconsultant.screencam.GenericFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>