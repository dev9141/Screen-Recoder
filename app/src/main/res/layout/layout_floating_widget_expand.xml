<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/root_container_expand"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/expanded_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTranspernt"
            android:orientation="vertical"
            android:visibility="gone">

            <!--Album image for the song currently playing.-->
            <ImageView
                android:id="@+id/iv_Record"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="-18dp"
                android:layout_marginLeft="70dp"
                android:paddingLeft="3.5dp"
                android:paddingTop="3.5dp"
                android:paddingRight="4.5dp"
                android:paddingBottom="4.5dp"
                android:background="@drawable/shadow_small"
                android:src="@drawable/ic_baseline_slow_motion_video_24"
                tools:ignore="ContentDescription" />
<!--            android:layout_marginLeft="45dp"-->

            <ImageView
                android:id="@+id/iv_Record_Cam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="3.5dp"
                android:paddingTop="3.5dp"
                android:paddingRight="4.5dp"
                android:paddingBottom="4.5dp"
                app:tint="@color/white"
                android:scaleType="fitXY"
                android:focusable="true"
                android:background="@drawable/shadow_small"
                android:src="@drawable/camusericon"

                tools:ignore="ContentDescription" />
<!--            android:layout_marginLeft="0dp"-->
<!--            android:layout_marginTop="-15dp"-->

            <ImageView
                android:id="@+id/iv_Setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3.5dp"
                android:paddingTop="3.5dp"
                android:paddingRight="4.5dp"
                android:paddingBottom="4.5dp"
                android:background="@drawable/shadow_small"
                android:src="@drawable/ic_baseline_settings_24"
                tools:ignore="ContentDescription" />

            <!--            android:layout_marginLeft="30dp"-->
<!--            android:layout_marginTop="-10dp"-->


            <ImageView
                android:id="@+id/iv_Home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shadow_small"
                android:paddingLeft="3.5dp"
                android:paddingTop="3.5dp"
                android:paddingRight="4.5dp"
                android:paddingBottom="4.5dp"
                android:src="@drawable/ic_baseline_home_24"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_Video_Edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="70dp"
                android:paddingStart="5.5dp"
                android:paddingTop="5.5dp"
                android:paddingEnd="6.5dp"
                android:paddingBottom="6.5dp"
                android:background="@drawable/shadow_small"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_edit"
                tools:ignore="ContentDescription"
                />

<!--            android:layout_marginLeft="55dp"-->
<!--            android:layout_marginTop="-5dp"-->

